<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @director.name %>
</p>

<p>
  <b>Filmography:</b>
  <ul>
  <% @director.movies.each do |movie| %>
    <li><%= link_to movie.title, movie %>  (<%=  movie.year %>)</li>
  <% end %>
  </ul>
</p>

<p>
  <b>Dob:</b>
  <%= @director.dob %>
</p>


